@model ProjectLeader.Models.AssignmentHelperModels.ProjectAssignmentHelper;


<div class="modal-dialog" role="document">
    <div class="modal-content">

        <div class="modal-header">
            <h2 class="modal-title">Add employee for project</h2>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>

        <div class="modal-body">

            <form id="add_project_form">

                <div class="form-group">
                    <label asp-for="FirstName" class="col-md-5 control-label">First Name*</label>
                    <div class="col-md-12">
                        <input asp-for="FirstName" class="form-control">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="LastName" class="col-md-5 control-label">Last Name*</label>
                    <div class="col-md-12">
                        <input asp-for="LastName" class="form-control">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Project" class="col-md-5 control-label">Project*</label>
                    <div class="col-md-12">
                        <input asp-for="Project" class="form-control">
                        <span asp-validation-for="Project" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" id="submit" class="btn btn-primary">Submit</button>
                </div>

            </form>
        </div>

    </div>
</div>
