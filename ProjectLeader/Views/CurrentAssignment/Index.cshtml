@model IEnumerable<ProjectLeader.Models.CurrentHelperModels.CurrentAssignnmentHelperModel>
@using ProjectLeader.Service;
@using Microsoft.AspNetCore.Identity;

@{
    ViewBag.Title = "Index";
}

<h2>Here is the list of Current Assignments</h2>

<div class="top-buffer"></div>
<div class="panel panel-primary">
    <div class="panel-heading panel-head">Current Assignments</div>
    @if(User.IsInRole("ProjectLead, DepartmentLead")){}
    <div class="panel-body">
        <div class="top-buffer"></div>
        <table class="table table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Project</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                        <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Project)</td>
                        <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

